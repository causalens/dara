{
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "module": "preserve",
    "moduleDetection": "force",
    "noImplicitAny": true,
    "preserveSymlinks": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es6",
    "verbatimModuleSyntax": true
  }
}
