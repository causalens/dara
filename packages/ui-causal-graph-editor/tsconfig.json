{
  "extends": "../../tsconfig.json",
  "exclude": ["tests/**", "**/*.spec.tsx", "**/*.stories.tsx", "dist/**", "**/src/packages/ui-causal-graph/graph-viewer/utils/stories-utils.tsx"],
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "./dist/",
    "esModuleInterop": true,
    "paths": {
      "@shared/*": ["./src/shared/*"],
      "@types": ["./src/types"]
