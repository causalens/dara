{
  "extends": "../../tsconfig.json",
  "exclude": [
    "tests/**",
    "**/*.spec.tsx",
    "**/*.stories.tsx",
    "dist/**"
  ],
  "include": [
    "./js/**/*"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "./js",
    "outDir": "./dist/",
    "allowJs": true,
    "checkJs": false,
    // strict
    "noImplicitAny": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true
  }
}
