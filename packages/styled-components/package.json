{
  "name": "@darajs/styled-components",
  "version": "1.18.2",
  "description": "CL wrapper around styled components so everything gets the same instance",
  "main": "dist/index.js",
  "license": "Apache-2.0",
  "scripts": {
    "build": "rimraf dist && tsc",
    "lint": "eslint src --ext .tsx --max-warnings 0 && stylelint './src/**/*.tsx'",
    "format": "prettier src --write",
    "format:check": "prettier src --check",
    "lint:fix": "eslint src --ext .tsx --max-warnings 0 --fix && stylelint './src/**/*.tsx' --fix"
  },
  "prettier": "@darajs/prettier-config",
  "devDependencies": {
    "@darajs/eslint-config": "1.18.2",
    "@darajs/prettier-config": "1.18.2",
    "@darajs/stylelint-config": "1.18.2",
    "@types/styled-components": "^5.1.26",
    "eslint": "^8.57.1",
    "prettier": "^3.0.0",
    "rimraf": "^3.0.2",
    "stylelint": "^15.0.0",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "polished": "^4.1.1",
    "styled-components": "^5.3.10"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  }
}
